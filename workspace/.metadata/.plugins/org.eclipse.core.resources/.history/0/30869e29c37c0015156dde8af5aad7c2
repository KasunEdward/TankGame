package data;

import org.lwjgl.opengl.Display;

import data.Boot;

public class Draw extends Thread {
	
	
	

	public void draw(){
		TileGrid grid=new TileGrid(Boot.map);
		grid.Draw();
		while(!Display.isCloseRequested()){
		
		Display.update();
		Display.sync(60);
		try {
			Thread.sleep(1000);
		} catch (InterruptedException e) {
			
			e.printStackTrace();
		}
		}
	}
	
}
